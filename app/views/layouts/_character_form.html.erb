
<%= form_for(@character) do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>



    <%= f.hidden_field :charClass, :value => Faker::Games::DnD.klass  %>
    <%= f.hidden_field :background, :value => Faker::Games::DnD.background  %>
    <%= f.hidden_field :alignment, :value => Faker::Games::DnD.alignment  %>
    <%= f.hidden_field :race, :value => choose_race()  %>
    <%= f.hidden_field :str, :value => stat_roller()  %>
    <%= f.hidden_field :dex, :value => stat_roller()  %>
    <%= f.hidden_field :con, :value => stat_roller()  %>
    <%= f.hidden_field :int, :value => stat_roller()  %>
    <%= f.hidden_field :wis, :value => stat_roller()  %>
    <%= f.hidden_field :cha, :value => stat_roller()  %>

    <%= f.submit %>
<% end %>